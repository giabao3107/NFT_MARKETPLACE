    "react-toastify": "^9.1.1"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-waffle": "^2.0.4",
    "@openzeppelin/contracts": "^4.8.1",
    "chai": "^4.3.7",
    "ethereum-waffle": "^4.0.10",
    "hardhat": "^2.12.7"
  },
  "browserslist": {
    "production": [
      ">0.2%",
